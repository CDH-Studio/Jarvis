            <div class='col col-sm-6 form-group mb-4'>
                <label for='from'>{{ antl.formatMessage('searchForm.bookingStart') }} <strong class='text-danger'>*</strong></label>
                <div class='timePicker' style='display: flex;'>
                    <div class="input-group date" id="from" data-target-input="nearest">
                        <input type="text" name="from" id="from" aria-required="true" class="form-control datetimepicker-input" value='{{ old('from', form.from) }}' data-target="#from"/>
                        <div class="input-group-append" data-target="#from" data-toggle="datetimepicker">
                            <div class="input-group-text timepicker-icon"><i class="fa fa-clock"></i></div>
                        </div>
                    </div>
                </div>

                @if(hasErrorFor('from'))
                    <div id='from-error' class='invalid-feedback show-invalid'>{{ getErrorFor('from')}}</div>
                @endif
		    </div>

            {{--  Meeting time TO  --}}
            <div class='col col-sm-6 form-group mb-4'>
                <label for='to'>{{ antl.formatMessage('searchForm.bookingEnd') }} <strong class='text-danger'>*</strong></label>
                <div class='timePicker' style='display: flex;'>
                    <div class="input-group date" id="to" data-target-input="nearest">
                        <input type="text" name="to" id="to" aria-required="true" class="form-control datetimepicker-input" value='{{ old('to', form.to) }}' data-target="#to"/>
                        <div class="input-group-append" data-target="#to" data-toggle="datetimepicker">
                            <div class="input-group-text timepicker-icon"><i class="fa fa-clock"></i></div>
                        </div>
                    </div>
                </div>

                @if(hasErrorFor('to') && !hasErrorFor('from'))
                    <div id='to-error' aria-labelledby='to-error' class='invalid-feedback show-invalid'>{{ getErrorFor('to')}}</div>
                @endif
            </div>

        </div>

