                <input name='date' id='date' aria-required="true" class='form-control date-form' type="text" data-role="datebox" data-options='{"mode":"calbox", "defaultValue":"{{ old('date', form.date) }}", "useLang":"{{antl.currentLocale()}}", "overrideDateFormat": "%Y-%m-%d" }'>

                @if(hasErrorFor('date'))
                    <div id='from-error' class='invalid-feedback show-invalid'>{{ getErrorFor('date')}}</div>
                @endif
            </div>
        </div>

        {{--  From and To form  --}}
        <div class='row'>

